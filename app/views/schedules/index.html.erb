<%= stylesheet_link_tag 'common', :media => "all" %>
<%= stylesheet_link_tag 'index', :media => "all" %>

<body>
<div class="container">

<div>
<div class="between center">
<h3>予定一覧</h3>
<%= button_to "新規追加", :new_schedule, method: :get, class: "btn" %>
</div>

<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
<% end %>

<div class="white">
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.title %></td>
        <td><%= user.start_date.strftime("%Y/%m/%d") %></td>
        <td><%= user.end_date.strftime("%Y/%m/%d") %></td>
        <td><%= user.all_date ? '○' : '' %></td>
        <td><%= user.updated_at.to_s(:datetime_jp) %></td>
        <td>
        <%= link_to "詳細", schedule_path(user) %>
        </td>
        <td>
          <%= link_to "編集", edit_schedule_path(user) %>
        </td>
        <td>
          <%= link_to "削除", schedule_path(user), method: :delete, data: { confirm: "予定を削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="white under">
<p>予定合計<%= User.count %>件</p>
<p class="thin">本日の日付<%= Date.today.strftime("%Y/%m/%d") %></p>
</div>

</div>
</div>
</body>